extends ../layout 
block content

  .py-12.bg-white
    .max-w-5xl.mx-auto.px-4(class='sm:px-6 lg:px-8')
      div(class='lg:text-center')
        //- h2.text-base.text-indigo-600.font-semibold.tracking-wide.uppercase Kategorie: category + icon
        h2(class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-5xl mt-4 mb-16")
          span(class="block") #{event.title}
            
      .mt-10
        dl.space-y-10(class='md:space-y-0 md:grid md:grid-cols-12 md:gap-x-8 md:gap-y-10')
          .flex.flex-col.col-span-8  
            img(class="rounded mb-3" src=event.banner)
            .flex.flex-row.items-center.gap-4
              span(class="min-w-min inline-block h-12 w-12 rounded-full overflow-hidden bg-gray-100")
                svg(class="h-12 w-12 text-gray-300" fill="currentColor" viewBox="0 0 24 24")
                  path(d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z")
              p(class="text-sm text-gray-500") Bianca Pinter und Lena Stroh hat diese Petition an Kreisjagdamt als untere Jagdbehörde Stuttgart und an 4 mehr gestartet.
            
            hr.mb-5.mt-5
            
            .description-container.text-xl.text-gray-800.leading-8 
              | !{event.description}
          
          .flex.col-span-4.flex-col
            p.text-lg.text-gray-800 <strong>47.404 haben unterschrieben.</strong> Nächstes Ziel: 50.000.
            
            hr.mb-5.mt-5
            
            .user-info.flex.gap-3.items-center.text-sm
              span(class="min-w-min inline-block h-8 w-8 rounded-full overflow-hidden bg-gray-100")
                  svg(class="h-8 w-8 text-gray-300" fill="currentColor" viewBox="0 0 24 24")
                    path(d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z")
              p.text-gray-800 <strong>#{event.creator.username}</strong>
              p.text-gray-500 #{event.creator.country}
              span(class="hidden sm:block ml-auto")
                button(type="button" class="inline-flex items-center px-1 py-1 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500")
                  svg(class="h-4 w-4 text-gray-500" x-description="Heroicon name: solid/pencil" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true")
                    path(d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z")
          
            
            .petition-form(class="mt-5")
              form(action="#" method="POST")  
                textarea(class="mb-2 w-full h-32 px-3 py-2 text-base text-gray-500 placeholder-gray-300 border rounded-lg focus:shadow-outline" placeholder="Ich unterschreibe, weil ...")
                label(class="text-sm text-gray-700")
                  input(type="checkbox" value="")
                  span(class="ml-1") Unterschrift und Kommentar nicht öffentlich auf der Petitionsseite anzeigen
                  
                <button type="submit" class="mt-6 group relative w-full flex justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                  <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                    <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" x-description="Heroicon name: solid/lock-closed" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </span> Petition unterschreiben
                </button>
                
block scripts
  <script src="/main.js"></script>