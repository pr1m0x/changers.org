extends ../layout 

include ../mixins/cardMixins

block content
  .bg-gray-white
    .max-w-5xl.mx-auto.pt-12.px-4(class='flex flex-col items-center')
      <div class="bg-white border p-4 flex w-full rounded h-20">
        <span class="w-auto flex justify-end items-center text-gray-500 p-2">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="text-gray-400 group-focus-within:text-gray-500 transition-colors duration-150"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
        </span>
        <input class="search-input w-full rounded p-2 outline-none text-2xl placeholder-gray-300 text-gray-500" type="text" placeholder="Petitionen durchsuchen">
        <button class="btn-search ml-6 bg-indigo-600 hover:bg-indigo-700 rounded text-white p-2 pl-4 pr-4">
          <p class="font-semibold text-sm">Suchen</p>
        </button>
      </div>
    
    if (searchResult)
      .max-w-5xl.mx-auto.px-4(class='flex flex-col gap-4')
        p.text-md.font-bold.ld.text-gray-900.mt-3.mb-6 (#{searchResult.length}) Suchergebnisse
        each val in searchResult
          +cardHomeLong(val)

      
  .bg-gray-50.border-t-1.mt-12
    .max-w-5xl(class='m-auto pb-12')
      h2(class='text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl mt-12 mb-12') Weitere Petitionen
      .suggestions-container(class="flex gap-4 mx-auto flex-wrap")
        each val in events
          +cardVertical(val)
          
block scripts       
  <script src="/main.js"></script>